<h1>Listing cards</h1>

<table>
  <tr>
    <th>Round</th>
    <th>State</th>
    <th>Card state</th>
    <th>Vote state</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cards.each do |card| %>
  <tr>
    <td><%= card.round_id %></td>
    <td><%= card.state %></td>
    <td><%= card.card_state %></td>
    <td><%= card.vote_state %></td>
    <td><%= link_to 'Show', card %></td>
    <td><%= link_to 'Edit', edit_card_path(card) %></td>
    <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

